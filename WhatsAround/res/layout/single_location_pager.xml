</RelativeLayout>


<LinearLayout 
    android:id="@+id/single_location_controls"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">

 <TextView
     android:id="@+id/street_view_request"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textStyle="bold"
     android:textSize="16sp"
     android:textColor="#FFFFFF" 
     android:background="@drawable/location_view_control_button" />    
 
  <TextView
     android:id="@+id/single_location_photo_control"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textStyle="bold"
     android:textSize="16sp"
     android:textColor="#FFFFFF" 
     android:background="@drawable/location_view_control_button" />

</LinearLayout>




